{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    // TODO: Necessary for keycloak-angular v9 - disable when the
    // issue https://github.com/keycloak/keycloak/issues/9045 is resolved
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "dom"],
    "paths": {
      "@app/*": ["app/core/*"],
      "@data/*": ["app/data/*"],
      "@layout/*": ["app/layout/*"],
      "@modules/*": ["app/modules/*"],
      "@shared/*": ["app/shared/*"],
      "@env": ["environments/environment"]
    }
  }
  //TODO: Enable strict templates
  /*,
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true
  }*/
}
