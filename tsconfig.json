{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    // TODO: Disable when update to keycloak-js 17 is possible:
    // https://github.com/mauriciovigolo/keycloak-angular/issues/385
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "emitDecoratorMetadata": false,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "dom"],
    "paths": {
      "@app/*": ["app/core/*"],
      "@data/*": ["app/data/*"],
      "@layout/*": ["app/layout/*"],
      "@modules/*": ["app/modules/*"],
      "@shared/*": ["app/shared/*"],
      "@env": ["environments/environment"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true
  }
}
